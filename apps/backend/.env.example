# Database
DATABASE_URL="postgresql://user:password@localhost:5432/doorstep_db?schema=public"

# Application
PORT=3000
NODE_ENV=development

# JWT & Auth
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
BETTER_AUTH_SECRET=your-better-auth-secret-key-change-this
BETTER_AUTH_URL=http://localhost:3000

# Email (for OTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-email-password
EMAIL_FROM=noreply@doorstep.com

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads

# Payment Gateway (configure as needed)
PAYMENT_API_KEY=your-payment-api-key
PAYMENT_SECRET=your-payment-secret

# Geolocation
MAX_DELIVERY_DISTANCE=10000

# Commission Rate (percentage)
STEPPER_COMMISSION_RATE=15
