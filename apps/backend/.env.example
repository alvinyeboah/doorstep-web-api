# Database
DATABASE_URL="postgresql://user:password@localhost:5432/doorstep_db?schema=public"

# Application
PORT=3000
NODE_ENV=development

# Frontend URL for CORS
# Development: http://localhost:3001
# Production: https://yourdomain.com (or https://doorstepvendor.alvinyeboah.com)
FRONTEND_URL=http://localhost:3001

# Better-Auth Configuration
BETTER_AUTH_SECRET=your-better-auth-secret-key-change-this-in-production
# Development: http://localhost:3000
# Production: https://api.yourdomain.com (or https://api.doorstepvendor.alvinyeboah.com)
BETTER_AUTH_URL=http://localhost:3000

# Email (useSend - for OTP and notifications)
# Get your API key from https://usesend.com dashboard
USESEND_API_KEY=us_your_api_key_here
# Optional: For self-hosted useSend instances, specify the base URL
# USESEND_BASE_URL=https://your-usesend-domain.com
EMAIL_FROM=noreply@doorstep.com

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads

# Payment Gateway (configure as needed)
PAYMENT_API_KEY=your-payment-api-key
PAYMENT_SECRET=your-payment-secret

# Geolocation
MAX_DELIVERY_DISTANCE=10000

# Commission Rate (percentage)
STEPPER_COMMISSION_RATE=15
