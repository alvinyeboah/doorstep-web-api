# Database
DATABASE_URL="postgresql://user:password@localhost:5432/doorstep_db?schema=public"

# Application
PORT=3000
NODE_ENV=development

# Frontend URL for CORS
# Development: http://localhost:3001
# Production: https://yourdomain.com (or https://doorstepvendor.alvinyeboah.com)
FRONTEND_URL=http://localhost:3001

# Better-Auth Configuration
# Development: http://localhost:3000
# Production: https://api.yourdomain.com (or https://api.doorstepvendor.alvinyeboah.com)
BETTER_AUTH_URL=http://localhost:3000

# Google OAuth (Optional - for social login)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Email (Plunk - for OTP and notifications)
# Get your API key from https://useplunk.com dashboard
PLUNK_API_KEY=your_plunk_api_key_here
# Optional: For self-hosted Plunk instances
# PLUNK_BASE_URL=https://mail.alvinyeboah.com
EMAIL_FROM=noreply@doorstep.com

# Cloudflare R2 Storage (for file uploads)
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id
CLOUDFLARE_ACCESS_KEY=your_r2_access_key
CLOUDFLARE_SECRET_KEY=your_r2_secret_key
R2_BUCKET_NAME=doorstep
# Optional: Custom R2 endpoint URL
# CLOUDFLARE_R2_URL=https://your-account-id.r2.cloudflarestorage.com
# Public CDN URL for assets (if using custom domain or R2 public buckets)
ASSETS_PUBLIC_BASE_URL=https://doorstep.your-domain.com

# File Upload (max file size in bytes - 5MB default)
MAX_FILE_SIZE=5242880

# Payment Gateway (configure as needed)
PAYMENT_API_KEY=your-payment-api-key
PAYMENT_SECRET=your-payment-secret

# Geolocation
MAX_DELIVERY_DISTANCE=10000

# Commission Rate (percentage)
STEPPER_COMMISSION_RATE=15
